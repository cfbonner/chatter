<h1>Login</h1>

<%= form_for @conn, Routes.session_path(@conn, :create), fn f -> %>
  <div class="form-group">
    <%= label f, :email %>
    <%= text_input f, :email %>
    <%= error_tag f, :email %>
  </div>

  <div>
    <%= submit "Log in" %>
  </div>
<% end %>

<%= form_for @conn, Routes.session_path(@conn, :delete), [method: :delete, as: :user], fn _ -> %>
  <%= submit "Log out" %>
<% end %>
